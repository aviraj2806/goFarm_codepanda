<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".HomePage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/grad"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#aa212121"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/billabong"
                android:gravity="center"
                android:paddingTop="10dp"
                android:text="@string/title"
                android:textColor="#ffffff"
                android:textSize="60sp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/fpass"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/disp"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/fp_back"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/back"
                            tools:ignore="VectorDrawableCompat" />

                        <TextView
                            android:id="@+id/fp_suc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/disp2"
                            android:drawableLeft="@drawable/smile"
                            android:fontFamily="@font/avenir_light"
                            android:gravity="center"
                            android:padding="15dp"
                            android:text="@string/mfpass" />

                        <EditText
                            android:id="@+id/fp_id"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="30dp"
                            android:background="@drawable/my_spinner"
                            android:ems="10"
                            android:fontFamily="@font/avenir_light"
                            android:gravity="center"
                            android:hint="@string/fpass_id"
                            android:inputType="textPersonName"
                            android:textColor="#000000"
                            android:textColorHighlight="#00897b"
                            android:textColorHint="#616161"
                            android:textColorLink="#00897b"
                            android:textCursorDrawable="@drawable/cursor"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/fp_motp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="40dp"
                            android:fontFamily="@font/avenir_light"
                            android:text="@string/mfpass_otp"
                            android:textColor="#e1e1e1"
                            android:textSize="8sp" />

                        <EditText
                            android:id="@+id/fp_otp"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:background="@drawable/my_spinner"
                            android:ems="10"
                            android:fontFamily="@font/avenir_light"
                            android:gravity="center"
                            android:hint="@string/fpass_otp"
                            android:inputType="textPersonName"
                            android:textColor="#000000"
                            android:textColorHighlight="#00897b"
                            android:textColorHint="#616161"
                            android:textColorLink="#00897b"
                            android:textCursorDrawable="@drawable/cursor"
                            android:textSize="18sp" />

                        <Button
                            android:id="@+id/fp_submit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/submit"
                            android:fontFamily="@font/avenir_light"
                            android:onClick="fpSubmit"
                            android:padding="10dp"
                            android:text="@string/next"
                            android:textAllCaps="false"
                            android:textColor="#ffffff"
                            android:textSize="20sp" />

                        <Button
                            android:id="@+id/fp_otpsubmit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/submit"
                            android:fontFamily="@font/avenir_light"
                            android:onClick="fpOTPSubmit"
                            android:padding="10dp"
                            android:text="@string/submit"
                            android:textAllCaps="false"
                            android:textColor="#ffffff"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/loan_m1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:fontFamily="@font/avenir_light"
                            android:gravity="center"
                            android:text="@string/mfpass_man"
                            android:textColor="#e1e1e1"
                            android:textSize="10sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/log"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/disp"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/log_id"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="30dp"
                            android:background="@drawable/my_spinner"
                            android:ems="10"
                            android:fontFamily="@font/avenir_light"
                            android:gravity="center|center_vertical"
                            android:hint="@string/hplog_id"
                            android:inputType="textPersonName"
                            android:textColor="#000000"
                            android:textColorHighlight="#00897b"
                            android:textColorHint="#616161"
                            android:textColorLink="#00897b"
                            android:textCursorDrawable="@drawable/cursor"
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/log_pass"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="30dp"
                            android:background="@drawable/my_spinner"
                            android:drawableRight="@drawable/pshow"
                            android:ems="10"
                            android:fontFamily="@font/avenir_light"
                            android:gravity="center|center_vertical"
                            android:hint="@string/hplog_pass"
                            android:inputType="textPassword"
                            android:paddingLeft="20dp"
                            android:textColor="#000000"
                            android:textColorHighlight="#00897b"
                            android:textColorHint="#616161"
                            android:textColorLink="#00897b"
                            android:textCursorDrawable="@drawable/cursor"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/log_forgot"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="12dp"
                            android:fontFamily="@font/avenir_light"
                            android:gravity="right"
                            android:text="@string/hplog_fpass"
                            android:textColor="#e1e1e1"
                            android:textSize="12sp" />

                        <Button
                            android:id="@+id/log_submit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="30dp"
                            android:background="@drawable/submit"
                            android:fontFamily="@font/avenir_light"
                            android:onClick="btnLogin"
                            android:padding="10dp"
                            android:text="@string/log_in"
                            android:textAllCaps="false"
                            android:textColor="#e1e1e1"
                            android:textSize="20sp" />

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="2dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="30dp"
                            android:background="#bdbdbd" />

                        <TextView
                            android:id="@+id/log_reg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/avenir_light"
                            android:text="@string/signup"
                            android:textColor="#e1e1e1"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/log_sign"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="20dp"
                            android:fontFamily="@font/avenir_light"
                            android:text="@string/signup2"
                            android:textColor="#03a9f4"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/disp"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/avenir55_roman"
                            android:text="@string/change_language_n"
                            android:textColor="#e1e1e1"
                            android:textSize="15sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/hindi"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/submit"
                                android:gravity="center"
                                android:text="हिन्दी"
                                android:textColor="#e1e1e1"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/marathi"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/submit"
                                android:gravity="center"
                                android:text="मराठी"
                                android:textColor="#e1e1e1"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/english"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/submit"
                                android:fontFamily="@font/avenir55_roman"
                                android:gravity="center"
                                android:text="English"
                                android:textColor="#e1e1e1"
                                android:textSize="16sp" />
                        </LinearLayout>

                    </LinearLayout>

                    <com.ms.square.android.expandabletextview.ExpandableTextView
                        android:id="@+id/expand_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/disp"
                        app:animDuration="200"
                        app:maxCollapsedLines="4">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:fontFamily="@font/avenir55_roman"
                            android:gravity="left|center_vertical"
                            android:text="@string/hp_about"
                            android:textColor="#e1e1e1"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@id/expandable_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:fontFamily="@font/avenir55_roman"
                            android:gravity="left"
                            android:paddingBottom="10dp"
                            android:textColor="#bdbdbd"
                            android:textSize="14sp" />

                        <ImageButton
                            android:id="@id/expand_collapse"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@android:color/transparent"
                            android:padding="10dp" />
                    </com.ms.square.android.expandabletextview.ExpandableTextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/disp2"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/avenir55_roman"
                            android:text="@string/hp_follow"
                            android:textColor="#424242"
                            android:textSize="15sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/fb"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="20dp"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/fb" />

                            <ImageView
                                android:id="@+id/insta"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="20dp"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/insta" />

                            <ImageView
                                android:id="@+id/web"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="20dp"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/web" />

                            <ImageView
                                android:id="@+id/wa"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="20dp"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/what" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </ScrollView>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>