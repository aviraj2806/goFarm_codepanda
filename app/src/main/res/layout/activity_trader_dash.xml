<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad"
    android:orientation="vertical"
    tools:context=".TraderDash">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/grad"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#bb212121"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/grad2"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/grad4"
                    android:orientation="vertical"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tdash_edit"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/edit"
                            android:fontFamily="@font/avenir_light"
                            android:gravity="left|center_vertical"
                            android:onClick="uploadDP"
                            android:paddingLeft="7dp"
                            android:paddingTop="5dp"
                            android:text="@string/fdash_dp"
                            android:textColor="#bdbdbd"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tdash_logout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:drawableRight="@drawable/log_out"
                            android:fontFamily="@font/avenir_light"
                            android:gravity="right|center_vertical"
                            android:paddingTop="5dp"
                            android:paddingRight="15dp"
                            android:text="@string/fdash_logout"
                            android:textColor="#bdbdbd"
                            android:textSize="12sp"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/tdash_dp"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginBottom="30dp"
                            android:src="@drawable/profilepic"
                            app:civ_border_color="#707070"
                            app:civ_border_width="3dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tdash_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/avenir_light"
                                android:gravity="center"
                                android:paddingTop="10dp"
                                android:text="Aviraj Singh"
                                android:textColor="#ffffff"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/tdash_id"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/avenir_light"
                                android:gravity="center"
                                android:text="aviraj2806"
                                android:textColor="#e1e1e1"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tdash_user"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/avenir_light"
                                android:gravity="center"
                                android:text="Farmer"
                                android:textColor="#e1e1e1"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tdash_city"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/avenir_light"
                                android:gravity="center"
                                android:text="Nashik"
                                android:textColor="#e1e1e1"
                                android:textSize="15sp" />

                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="20dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tdash_buy"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginEnd="15dp"
                                android:layout_marginRight="15dp"
                                android:layout_marginBottom="15dp"
                                android:layout_weight="1"
                                android:background="@drawable/border"
                                android:drawableTop="@drawable/buy_head"
                                android:elevation="20dp"
                                android:fontFamily="@font/avenir_light"
                                android:gravity="center"
                                android:padding="10dp"
                                android:text="\nBuy Crop"
                                android:textColor="#e1e1e1"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tdash_demand"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginEnd="15dp"
                                android:layout_marginRight="15dp"
                                android:layout_marginBottom="15dp"
                                android:layout_weight="1"
                                android:background="@drawable/border"
                                android:drawableTop="@drawable/demand_head"
                                android:elevation="20dp"
                                android:fontFamily="@font/avenir_light"
                                android:gravity="center"
                                android:padding="10dp"
                                android:text="\nSale"
                                android:textColor="#e1e1e1"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tdash_trans"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="15dp"
                                android:layout_marginTop="20dp"
                                android:layout_weight="1"
                                android:background="@drawable/border"
                                android:drawableTop="@drawable/trans_head"
                                android:elevation="20dp"
                                android:fontFamily="@font/avenir_light"
                                android:gravity="center"
                                android:padding="10dp"
                                android:text="\nTransport"
                                android:textColor="#e1e1e1"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/textView3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1" />

                        </LinearLayout>

                    </LinearLayout>

                    </LinearLayout>
                </ScrollView>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>