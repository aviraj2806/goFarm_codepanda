<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="20dp"
    android:layout_marginEnd="15dp"
    android:layout_marginRight="15dp"
    android:background="@drawable/my_spinner"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/slist_dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="30dp"
            android:onClick="uploadDP"
            android:src="@drawable/profilepic"
            app:civ_border_color="#707070"
            app:civ_border_width="3dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/slist_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenir_light"
                android:text="Aviraj Singh"
                android:textColor="#424242"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/slist_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/avenir_light"
                android:text="Nashik"
                android:textColor="#424242" />

            <TextView
                android:id="@+id/slist_crop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenir_light"
                android:text="Onion"
                android:textColor="#424242" />

            <TextView
                android:id="@+id/slist_amt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenir_light"
                android:text="100 Quintals"
                android:textColor="#424242" />

            <TextView
                android:id="@+id/slist_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/avenir_light"
                android:text="Contact : 9420484497"
                android:textColor="#424242"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>